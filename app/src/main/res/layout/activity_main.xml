<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bigi">
            <TextView
                android:id="@+id/all"
                style="@style/CategoryStyle"
                android:background="@color/all"
                android:gravity="center"
                android:text="@string/category_all" />

            <TextView
                android:id="@+id/finance"
                style="@style/CategoryStyle"
                android:gravity="center"
                android:background="@color/finance"
                android:text="@string/category_finance" />

            <TextView
                android:id="@+id/marketing"
                style="@style/CategoryStyle"
                android:gravity="center"
                android:background="@color/marketing"
                android:text="@string/category_marketing" />

            <TextView
                android:id="@+id/tech"
                style="@style/CategoryStyle"
                android:gravity="center"
                android:background="@color/tech"
                android:text="@string/category_tech" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>